{
  "name": "openslots",
  "version": "0.1.0",
  "type": "module",
  "license": "GPL-3.0-or-later",
  "scripts": {
    "dev": "bun ./src/index.html",
    "start": "bun ./src/index.html",
    "build": "bun run scripts/build.ts",
    "prepare": "simple-git-hooks",
    "test": "bun test",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@preact/signals": "^1.2.2",
    "bootstrap": "^5.3.8",
    "bootswatch": "^5.3.8",
    "nostr-tools": "^2.19.4",
    "preact": "^10.19.6",
    "preact-iso": "^2.4.0",
    "temporal-polyfill-lite": "^0.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@happy-dom/global-registrator": "^20.1.0",
    "@testing-library/preact": "^3.2.4",
    "@types/bun": "^1.3.5",
    "simple-git-hooks": "^2.11.1",
    "sass": "^1.97.2",
    "typescript": "^5.9.3"
  },
  "simple-git-hooks": {
    "pre-commit": "bun run lint && bun run typecheck",
    "pre-push": "bun run build && bun test"
  }
}
